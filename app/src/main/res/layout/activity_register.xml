<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/primarycolor">

    <ImageView
        android:id="@+id/img_logo1"
        android:layout_width="142dp"
        android:layout_height="135dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_logo1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/poppinsbold"
        android:text="DAFTAR"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/txt_1"
        android:padding="30dp"
        android:id="@+id/dy_1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:hint="nama pengguna"
            android:gravity="center"
            android:textColorHint="@color/secondcolor"
            android:textColor="@color/secondcolor"
            android:paddingLeft="10dp"
            android:backgroundTint="@color/cream"
            android:id="@+id/nama"
            android:fontFamily="@font/poppinsregular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:hint="nomor ponsel"
            android:textColorHint="@color/secondcolor"
            android:textColor="@color/secondcolor"
            android:paddingLeft="10dp"
            android:backgroundTint="@color/cream"
            android:id="@+id/no"
            android:fontFamily="@font/poppinsregular" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:hint="alamat"
            android:gravity="center"
            android:textColorHint="@color/secondcolor"
            android:textColor="@color/secondcolor"
            android:paddingLeft="10dp"
            android:backgroundTint="@color/cream"
            android:id="@+id/alamat"
            android:fontFamily="@font/poppinsregular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:hint="kata sandi"
            android:gravity="center"
            android:textColorHint="@color/secondcolor"
            android:textColor="@color/secondcolor"
            android:paddingLeft="10dp"
            android:backgroundTint="@color/cream"
            android:id="@+id/kata_sandi"
            android:fontFamily="@font/poppinsregular"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:hint="Masukan ulang kata sandi"
            android:inputType="textPassword"
            android:gravity="center"
            android:textColorHint="@color/secondcolor"
            android:textColor="@color/secondcolor"
            android:paddingLeft="10dp"
            android:backgroundTint="@color/cream"
            android:id="@+id/skata_sandi"
            android:fontFamily="@font/poppinsregular"/>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="mendaftar"
        android:layout_below="@id/dy_1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button1"
        android:width="300dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:id="@+id/button_mendaftar"
        android:fontFamily="@font/poppinsbold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="kembali"
        android:layout_below="@id/button_mendaftar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button2"
        android:width="300dp"
        android:textColor="@color/secondcolor"
        android:textSize="14sp"
        android:id="@+id/button_kembali"
        android:fontFamily="@font/poppinsbold"/>

</RelativeLayout>